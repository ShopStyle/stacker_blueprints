{
    "Outputs": {
        "PolicyName": {
            "Value": {
                "Ref": "Policy"
            }
        }
    }, 
    "Resources": {
        "Policy": {
            "Properties": {
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "logs:CreateLogGroup", 
                                "logs:CreateLogStream", 
                                "logs:PutLogEvents"
                            ], 
                            "Effect": "Allow", 
                            "Resource": "arn:aws:logs:*:*:*"
                        }, 
                        {
                            "Action": [
                                "ecr:GetAuthorizationToken"
                            ], 
                            "Effect": "Allow", 
                            "Resource": [
                                "*"
                            ]
                        }
                    ]
                }, 
                "PolicyName": {
                    "Fn::Sub": "${AWS::StackName}-policy"
                }, 
                "Roles": []
            }, 
            "Type": "AWS::IAM::Policy"
        }
    }
}
{
    "Outputs": {
        "InstanceProfileArn": {
            "Value": {
                "Fn::GetAtt": [
                    "myNameInstanceProfile", 
                    "Arn"
                ]
            }
        }, 
        "InstanceProfileName": {
            "Value": {
                "Ref": "myNameInstanceProfile"
            }
        }, 
        "PolicyName": {
            "Value": {
                "Ref": "Policy"
            }
        }, 
        "myNameArn": {
            "Value": {
                "Fn::GetAtt": [
                    "myName", 
                    "Arn"
                ]
            }
        }, 
        "myNameName": {
            "Value": {
                "Ref": "myName"
            }
        }
    }, 
    "Resources": {
        "Policy": {
            "Properties": {
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "logs:CreateLogGroup", 
                                "logs:CreateLogStream", 
                                "logs:PutLogEvents"
                            ], 
                            "Effect": "Allow", 
                            "Resource": "arn:aws:logs:*:*:*"
                        }, 
                        {
                            "Action": [
                                "ecr:GetAuthorizationToken"
                            ], 
                            "Effect": "Allow", 
                            "Resource": [
                                "*"
                            ]
                        }
                    ]
                }, 
                "PolicyName": {
                    "Fn::Sub": "${AWS::StackName}-policy"
                }, 
                "Roles": [
                    {
                        "Ref": "myName"
                    }
                ]
            }, 
            "Type": "AWS::IAM::Policy"
        }, 
        "myName": {
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ], 
                            "Effect": "Allow", 
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            }
                        }
                    ]
                }, 
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/CloudWatchLogsFullAccess"
                ], 
                "Path": "/"
            }, 
            "Type": "AWS::IAM::Role"
        }, 
        "myNameInstanceProfile": {
            "Properties": {
                "Path": "/", 
                "Roles": [
                    {
                        "Ref": "myName"
                    }
                ]
            }, 
            "Type": "AWS::IAM::InstanceProfile"
        }
    }
}
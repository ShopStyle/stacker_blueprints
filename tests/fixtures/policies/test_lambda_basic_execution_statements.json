{
    "PolicyDocument": {
        "Statement": [
            {
                "Action": [
                    "logs:CreateLogGroup", 
                    "logs:CreateLogStream", 
                    "logs:PutLogEvents"
                ], 
                "Effect": "Allow", 
                "Resource": [
                    {
                        "Fn::Join": [
                            "", 
                            [
                                "arn:aws:logs:", 
                                {
                                    "Ref": "AWS::Region"
                                }, 
                                ":", 
                                {
                                    "Ref": "AWS::AccountId"
                                }, 
                                ":log-group:", 
                                {
                                    "Fn::Join": [
                                        "/", 
                                        [
                                            "/aws/lambda", 
                                            "myfunction"
                                        ]
                                    ]
                                }
                            ]
                        ]
                    }, 
                    {
                        "Fn::Join": [
                            "", 
                            [
                                "arn:aws:logs:", 
                                {
                                    "Ref": "AWS::Region"
                                }, 
                                ":", 
                                {
                                    "Ref": "AWS::AccountId"
                                }, 
                                ":log-group:", 
                                {
                                    "Fn::Join": [
                                        "/", 
                                        [
                                            "/aws/lambda", 
                                            "myfunction"
                                        ]
                                    ]
                                }, 
                                ":*"
                            ]
                        ]
                    }
                ]
            }
        ]
    }, 
    "PolicyName": "TestPolicy"
}
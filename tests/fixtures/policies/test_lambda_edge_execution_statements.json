{
    "PolicyDocument": {
        "Statement": [
            {
                "Action": [
                    "logs:CreateLogStream"
                ], 
                "Effect": "Allow", 
                "Resource": [
                     {
                         "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/myfunction:*"
                     }

                ]
            }, 
            {
                "Action": [
                    "logs:PutLogEvents"
                ], 
                "Effect": "Allow", 
                "Resource": [
                    {
                         "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/myfunction:*"
                    }
                ]
            }, 
            {
                "Action": [
                    "logs:CreateLogGroup", 
                    "logs:CreateLogStream", 
                    "logs:PutLogEvents", 
                    "logs:DescribeLogStreams"
                ], 
                "Effect": "Allow", 
                "Resource": [
                    "arn:aws:logs:*:*:*"
                ]
            }
        ]
    }, 
    "PolicyName": "TestPolicy"
}

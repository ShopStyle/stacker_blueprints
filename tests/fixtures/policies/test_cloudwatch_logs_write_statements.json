{
    "PolicyName": "TestPolicy", 
    "PolicyDocument": {
        "Statement": [
            {
                "Action": [
                    "logs:CreateLogGroup", 
                    "logs:CreateLogStream", 
                    "logs:PutLogEvents"
                ], 
                "Resource": [
                    {
                        "Fn::Join": [
                            "", 
                            [
                                "arn:aws:logs:", 
                                {
                                    "Ref": "AWS::Region"
                                }, 
                                ":", 
                                {
                                    "Ref": "AWS::AccountId"
                                }, 
                                ":log-group:", 
                                "group"
                            ]
                        ]
                    }, 
                    {
                        "Fn::Join": [
                            "", 
                            [
                                "arn:aws:logs:", 
                                {
                                    "Ref": "AWS::Region"
                                }, 
                                ":", 
                                {
                                    "Ref": "AWS::AccountId"
                                }, 
                                ":log-group:", 
                                "group", 
                                ":log_stream:stream"
                            ]
                        ]
                    }
                ], 
                "Effect": "Allow"
            }
        ]
    }
}
